    .categoryItem {
      display: block;
    }

    .categoryItemImage {
      width: 100%;
      overflow: hidden;
    }

    .categoryItemImage img {
      width: 100%;
      height: 100%;
      margin: auto;
    }

    .categoryItemText {
      width: 100%;
      margin-left: 5px;
