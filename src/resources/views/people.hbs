<script>
    $(document).ready(function () {
        $.ajax({
            url: 'get-all-personal',
            type: 'GET',
            dataType: "json",
            encode: true,
        }).done(function (data) {
            console.log(data);
            let html = "";
            data.map((item) => {
                html += `
                    <div class="card mb-3" style="  min-width: 30%;  margin-top: 20px;">
                        <div class="row g-0" style="display: flex; align-items: top; justify-content: space-evenly; ">
                            <div class="col-md-8" style="width: 100%;display:flex;" >
                                <div class="img-people" style="width:35%;filter: grayscale(1);" >
                                    <img style="width:100px; height:133.333px" src="` + item.imageAvata + `" alt="">
                                </div>
                                <div class="card-body" style="width:65%">
                                    <p class="card-title" style="padding-bottom: 10px; margin-bottom: 10px; border-bottom: solid 1px white; font-size: 15px;"><strong>Họ tên:</strong> `+ item.name + `</p>
                                    <p style="font-size: 15px;"><strong>Chức vụ:</strong> `+ item.role.nameRole + `</p>
                                </div>
                            </div>
                        </div>
                    </div>  
        `;
            })
            $(".contain-inf-people").html(html)
        })
    })
</script>

