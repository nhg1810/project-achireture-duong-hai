<script>
    $(document).ready(function () {
        $.ajax({
            url: 'get-all-personal',
            type: 'GET',
            dataType: "json",
            encode: true,
        }).done(function (data) {
            console.log(data);
            let html = "";
            data.map((item) => {
                html += `
                    <div class="card mb-3" style="max-width: 540px; min-width: 40%;  margin-top: 20px;">
            <div class="row g-0" style="display: flex; align-items: top; justify-content: space-evenly; ">
                <div class="col-md-4" style="margin-right: 30px">
                    <img src="`+ item.imageAvata + `" style="width: 70%; height: auto;" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8" style="width: 100%;">
                    <div class="card-body">
                        <h3 class="card-title" style="padding-bottom: 10px; margin-bottom: 10px; border-bottom: solid 1px white">Tên: `+ item.name + `</h5>
                        <p>Email: `+ item.email + `</p>
                        <p>Ngày sinh: `+ item.birth + `</p>
                        <p>Số điện thoại: `+ item.contact + `</p>
                        <b>Chức vụ: `+item.role.nameRole+`</b>
                    </div>
                </div>
            </div>
        </div>  
        `;
            })
            $(".contain-inf-people").html(html)
        })
    })
</script>

