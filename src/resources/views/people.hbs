<script>
    $(document).ready(function () {
        $.ajax({
            url: 'get-all-personal',
            type: 'GET',
            dataType: "json",
            encode: true,
        }).done(function (data) {
            console.log(data);
            let html = "";
            data.map((item) => {
                html += ` <div class="mainPersonnel">
            <div class="namePersonnel">
                <p>Tên: `+ item.name + `</p>
                <p>Email: `+ item.email + `</p>
                <p>Ngày sinh: `+ item.birth + `</p>
                <p>Số điện thoại: `+ item.contact + `</p>
                <p>Tên: `+ item.name + `</p>
                <img src="`+item.imageAvata+`" style="width: 100px; height: 100px">
            </div>
            <div class="jobPosition">Vị trí 

                `;
                if (!item.role) {
                    html += ' :Đang cập nhật...'
                } else {
                    html += item.role.nameRole;
                }
                html += `
            </div>
        </div>`;
            })
            $(".textContent").html(html)
        })
    })
</script>

